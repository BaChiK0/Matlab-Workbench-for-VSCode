{
  "name": "matlab-workbench-for-vscode",
  "displayName": "Matlab-workbench-for-VSCode",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "publisher": "BaChiK0",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "matlabworkbench",
          "title": "MatlabWorkbench",
          "icon": "icons/grid.svg"
        }
      ]
    },
    "views": {
      "matlabworkbench": [
        {
          "id": "workbench",
          "name": "Workbench"
        }
      ]
    },
    "commands": [
      {
        "command": "MatlabWorkbench.shareSession",
        "title": "MatlabWorkbench: Share Session"
      },
      {
        "command": "MatlabWorkbench.getMatlabWorkbench",
        "title": "MatlabWorkbench: Get Matlab Workbench"
      }
    ],
    "configuration":[
      {
        "title": "MatlabWorkbench",
        "properties": {
          "matlabworkbench.pythonPath": {
            "type": "string",
            "default": null
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
